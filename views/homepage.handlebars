<div>
{{#each postInfo as |post| }} 
<div class="card">
  <div class="card-header">
    {{ post_title }}
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{ post_body }}</p>
      <footer class="blockquote-footer">{{ user_name }}</footer>
    </blockquote>
  </div>
</div>
{{/each}} 
</div>
